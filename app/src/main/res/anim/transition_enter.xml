<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="300">
    <alpha
        android:fromAlpha="0"
        android:toAlpha="1" />
    <translate
        android:fromYDelta="-10%p"
        android:toYDelta="0" />
    <scale
        android:pivotY="50%p"
        android:pivotX="50%p"
        android:fromXScale="1.05"
        android:fromYScale="1.05"
        android:toXScale="1"
        android:toYScale="1" />

</set>